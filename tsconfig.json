{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "typeRoots": ["index.d.ts", "node_modules/@types"]
    },
    "include": ["./src/**/*.tsx", "./src/**/*.ts", "index.d.ts"],
    "exclude": ["node_modules"]
}
